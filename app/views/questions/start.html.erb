<h1 class="uppercase">Necesitamos algunos datos sobre ti</h1>

<div class="card">
  <div class="card-header">
    <p class="uppercase center">Progreso</p>
    <div class="progress-bar"></div>
  </div>
  <div class="card-body">
    <div class="question-header"></div>
    <div class="question-section">
      <h4 class="uppercase">Escolares</h4>
      <%= simple_form_for(@user, html: { class: "form-inline" }) do |f| %>
        <%= f.input :edad, label: label_for(:edad), wrapper_html: { class: "col-4" } %>
        <%= f.input :estado_residencia, collection: Mexico::ESTADOS, label: label_for(:estado_residencia), wrapper_html: { class: "col-4" } %>
        <%= f.input :ultimo_grado_cursado, collection: Mexico::GRADOS_ESCOLARES, label: label_for(:ultimo_grado_cursado), wrapper_html: { class: "col-4" } %>
        <%= f.input :sexo, collection: { "Mujer": 1, "Hombre": 2 }, label: label_for(:sexo), wrapper_html: { class: "col-4" } %>
        <%= f.input :asistes_escuela, as: :radio_buttons, collection: { "SÃ­": 1, "No": 0 }, label: label_for(:asistes_escuela), wrapper_html: { class: "col-4" } %>
        <%= f.submit "Guardar" %>
      <% end %>
    </div>
  </div>
</div>
